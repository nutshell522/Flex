{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "lib": [
            "esnext",
            "dom"
        ],
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "forceConsistentCasingInFileNames": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "./components.d.ts",
        "src/main.js"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}